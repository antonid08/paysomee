    <style name="Application.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Application.Label.Primary" parent="@android:style/Widget.TextView">
        <!--todo-->
    </style>

    <style name="Application.Label.Primary.Bold" parent="Application.Label.Primary">
        <item name="android:textStyle">bold</item>
    </style>

